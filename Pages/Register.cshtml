@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="css/site.css" asp-append-version="true" />
}

<div class="register-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Register</h5>
            </div>

            <form method="post">

                <!--แสดง errorMessage-->
                @if (Model.successMessage.Length > 0)
                {
                    <div class="row d-flex justify-content-center mt-3 mb-0 mx-3">
                        <div class="col-sm-12">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>@Model.successMessage</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                }

                <!--แสดง successMessage-->
                @if (Model.errorMessage.Length > 0)
                {
                    <div class="row d-flex justify-content-center mt-3 mb-0 mx-3">
                        <div class="col-sm-12">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>@Model.errorMessage</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                }

                <div class="modal-body">
                    <!-- First Name -->
                    <div class="form-group">
                        <label for="firstname">First Name</label>
                        <input type="text" id="firstname" name="firstname" class="form-control" value="@Model.User.firstname" required />
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="lastname">Last Name</label>
                        <input type="text" id="lastname" name="lastname" class="form-control" value="@Model.User.lastname" required />
                    </div>

                    <!-- Role -->
                    <div class="form-group">
                        <label for="role">Role</label>
                        <select id="role" name="role" class="form-control" required>
                            <option value="" disabled selected>-- Select Role --</option>
                            <option value="SaleD1">Sale Department 1</option>
                            <option value="SaleD2">Sale Department 2</option>
                            <option value="SaleD3">Sale Department 3</option>
                            <option value="Warehouse">Warehouse</option>
                        </select>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.User.email" required />
                    </div>

                    <!-- Username -->
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" class="form-control" value="@Model.User.username" required />
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" value="@Model.User.password" required />
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label for="cfpassword">Confirm Password</label>
                        <input type="password" id="cfpassword" name="cfpassword" class="form-control" value="@Model.User.cfpassword" required />
                    </div>
                </div>


                <!--ปุ่ม Add user-->
                <div class="modal-footer">
                    <button type="submit" class="addbtn">Add user</button>
                </div>
                <p class="login">Already have an acoount <a asp-area="" asp-page="/Login">Sign in</a></p>
            </form>
        </div>
    </div>
</div>
